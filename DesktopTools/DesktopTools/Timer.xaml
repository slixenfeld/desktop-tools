<Window x:Class="DesktopTools.TimerApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Timer" Height="130" Width="340" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="Start" Content="Start" Margin="209,10,0,0" Click="Start_Click" Width="94" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="Stop" Content="Stop" Margin="209,51,0,0" Width="94" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Stop_Click"/>
        <TextBox x:Name="StopwatchTime1" HorizontalAlignment="Left" Margin="10,10,0,0" Text="00:00:00" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" Height="73" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="48" MouseDown="StopwatchTime1_MouseDown"/>

    </Grid>
</Window>
